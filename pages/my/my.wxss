page{background: white;height: 100%;}
view{box-sizing: border-box}
.bg{min-height: 260rpx;background: url(http://m.wooncai.com:80/www/img/mobile/mymes/personal_center_bj.png) no-repeat;background-size: 100% 100%;font-size: 35rpx;color: white}
.my-mes{display:table;width: 100%;padding:75rpx 0 0 40rpx;color: white}
.my-mes>view{display: table-cell;vertical-align: top}
.my-mes .img{width: 120rpx;height: 120rpx;border-radius: 50%;overflow: hidden}
.my-mes .img image{width: 100%;height: 100%;}
.my-mes .text{padding:20rpx 0 0 15rpx;font-size: 35rpx;}
.sign{font-size: 30rpx;padding:10rpx 20rpx;text-align:center;}

.pay{display: flex;align-items: center;width: 100%;justify-content: center;padding: 20rpx 0;background: white}
.pay .opt1{width: 100%;}
.pay .opt1 .img{width:60rpx;height: 60rpx;margin: 0 auto;}
.pay .opt1 .img image{width: 100%;height: 100%;}
.pay .opt1 .text{text-align: center;font-size: 25rpx;padding-top:15rpx;width: 100%;}
.pay .opt1.last{border-left: 1px solid #ccc6c6}

.other{display: flex;align-items: center;width: 100%;justify-content: center;padding: 20rpx 0;margin-top:30rpx;background: white}
.other .opt2{width: 100%;}
.other .opt2 .img{width:80rpx;height: 80rpx;margin: 0 auto;}
.other .opt2 .img image{width: 100%;height: 100%;}
.other .opt2 .text{text-align: center;font-size: 28rpx;padding-top:22rpx;width: 100%;}